{
  "name": "react-typescript-starter",
  "version": "0.0.2",
  "description": "A boilerplate starter for the Garage projects that wish to use React as a frontend. With added TypeScript!",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot",
    "start:static": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "test": "jest",
    "tdd": "jest --watchAll"
  },
  "author": "IBM Cloud Garage [James Carr]",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "23.3.1",
    "awesome-typescript-loader": "5.2.0",
    "css-loader": "1.0.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.5.0",
    "react-test-renderer": "16.4.2",
    "source-map-loader": "1.1.1",
    "style-loader": "0.22.1",
    "ts-jest": "23.1.4",
    "typescript": "3.0.1",
    "typescript-plugin-styled-components": "1.0.0",
    "webpack": "4.17.1",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.11"
  },
  "dependencies": {
    "@types/react": "16.4.12",
    "@types/react-dom": "16.0.7",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "styled-components": "3.4.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
